<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WildRift" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/magic_mint</item>
        <item name="colorPrimaryVariant">@color/dark_jungle</item>
        <item name="colorOnPrimary">@color/wild_rice</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_sea_green</item>
        <item name="colorSecondaryVariant">@color/english_walnut</item>
        <item name="colorOnSecondary">@color/irish_coffee</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>