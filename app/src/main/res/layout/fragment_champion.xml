<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ChampionFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            tools:context=".view.ChampionFragment">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view_champion_icon"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/items_icon"
                app:civ_border_color="@color/driftwood"
                app:civ_border_width="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_champion_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="AHRI"
                android:textColor="@color/driftwood"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_view_champion_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_champion_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="the Nine-Tailed Fox"
                android:textAlignment="center"
                android:textColor="@color/driftwood"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_champion_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_champion_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_champion_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="MAGE / ASSASSIN"
                android:textAlignment="center"
                android:textColor="@color/driftwood"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_champion_description"
                app:layout_constraintTop_toBottomOf="@+id/tv_champion_description" />


            <com.google.android.material.textview.MaterialTextView

                android:id="@+id/tv_runes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="8dp"
                android:background="@drawable/my_border"
                android:text="@string/runes"
                android:textAlignment="center"
                android:textColor="@color/driftwood"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/image_view_champion_icon"
                tools:layout_editor_absoluteX="0dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_runes_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_runes" />

            <com.google.android.material.textview.MaterialTextView

                android:id="@+id/tv_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="8dp"
                android:background="@drawable/my_border"
                android:text="@string/items"
                android:textAlignment="center"
                android:textColor="@color/driftwood"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/rv_runes_list" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_items_list"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:nestedScrollingEnabled="true"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_items" />


            <com.google.android.material.textview.MaterialTextView

                android:id="@+id/tv_ability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:background="@drawable/my_border"
                android:text="@string/abilities"
                android:textAlignment="center"
                android:textColor="@color/driftwood"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/rv_items_list" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_items_ability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:nestedScrollingEnabled="true"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_ability"
                tools:layout_editor_absoluteX="0dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>